{
  "name": "terraform",
  "version": "1.0.0",
  "description": "App",
  "main": "index.js",
  "scripts": {
    "init": "terraform init",
    "dev": "dotenv -- terraform apply -auto-approve -var-file env.development.tfvars -var enable_ec2=true",
    "dev:db": "dotenv -- terraform apply -auto-approve -var-file env.development.tfvars -var enable_ec2=true -var create_database=true",
    "start": "dotenv -- terraform apply -auto-approve -var-file env.production.tfvars -var enable_ec2=true",
    "start:db": "dotenv -- terraform apply -auto-approve -var-file env.production.tfvars -var enable_ec2=true -var create_database=true",
    "windows": "dotenv -- terraform apply -auto-approve -var-file env.windows.tfvars -var enable_ec2=true -var 'os=windows'",
    "plan": "dotenv -- terraform plan",
    "destroy": "dotenv -- terraform destroy -auto-approve"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "dotenv-cli": "^11.0.0"
  }
}
